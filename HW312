import java.util.Scanner;

public class t {
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        int a = scn.nextInt();
        System.out.println(f(a));
    }
    public static int f(int n){
        if (n == 1 || n ==0){
            return n+1;
        }else {
            return f(n-1)+f(n/2);
        }
    }
}
//遞迴
